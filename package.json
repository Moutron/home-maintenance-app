{
  "name": "home-maintenance-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:seed": "tsx prisma/seed.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit/lib tests/unit/validations",
    "test:api": "vitest run tests/unit/api",
    "test:component": "vitest run tests/unit/components",
    "test:page": "vitest run tests/unit/pages",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:api && npm run test:component && npm run test:page && npm run test:e2e",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:migrate": "docker-compose exec app npx prisma migrate dev",
    "docker:seed": "docker-compose exec app npm run db:seed",
    "docker:studio": "docker-compose --profile tools up prisma-studio",
    "test:local": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/home_maintenance_app npm test",
    "test:docker": "docker-compose exec app npm test"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
